{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
            <link type="text/css" rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="wrapper">
        <div class="form-holder">
            <img src="/img/user.png" class="logo" alt="">
            <h2>Connexion</h2>
            <form action="" class="form">
                <div class="form-group">
                    <!-- <img src="/img/user.png" alt=""> -->
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Adresse e-mail">
                </div>
                <div class="form-group">
                    <!-- <img src="/img/lock.png" alt=""> -->
                    <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Mot de passe">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
                
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

                <div class="form-group">
                   <button type="submit">Connexion</button> 
                </div>
                <div class="form-group">
                    <a href="#">Mot de passe oubli√© ?</a><br>
                    <a href="/inscription">Vous n'avez pas de compte ? S'inscrire</a>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
